<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <RelativeLayout
            android:id="@+id/layout_register_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#57068c"
            android:layout_marginBottom="30dp" >
            
            <TextView
                android:id="@+id/text_register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="NYU LINK"
                android:textColor="#fff"
                android:textSize="22sp" />
        </RelativeLayout>
        
		<RelativeLayout
            android:id="@+id/layout_register_username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/layout_register_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="@drawable/input_box_grey_border"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_username" />

            <EditText
                android:id="@+id/Redit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:hint="Username" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_register_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/layout_register_username"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/input_box_grey_border"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_email" />
            
            <EditText
                android:id="@+id/Redit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_email"
                android:background="#fff"
                android:hint="Email" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_register_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/layout_register_email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/input_box_grey_border"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_password" />
            
            <EditText
                android:id="@+id/Redit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_password"
                android:background="#fff"
                android:hint="Password"
                android:inputType="textPassword" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/signup"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/layout_register_password"
            android:background="@drawable/button_green" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="SIGN UP"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/text_signin_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#ccc"
                android:textSize="14sp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/startlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_signin_hint"
                android:text="Sign In"
                android:textColor="#818790"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>