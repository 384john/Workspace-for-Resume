<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_create_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEC"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <ImageView
            android:id="@+id/cancel_new_voice"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_back1" />

        <ImageView
            android:id="@+id/submit_new_voice"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/submit3" />
    </RelativeLayout>
    
    <EditText
        android:id="@+id/voice_detail"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="#fff"
    	android:gravity="top|left"
    	android:hint="Say anything!"
    	android:singleLine="false"
    	android:padding="10dp" />
        
</LinearLayout>