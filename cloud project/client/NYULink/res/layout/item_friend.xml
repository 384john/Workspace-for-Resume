<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.2dp"
        android:padding="12dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/friend_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/my_photo_for_drawer" />
        
        <TextView
            android:id="@+id/friend_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/friend_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/friend_img"
            android:layout_alignTop="@id/friend_img"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Username"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/friend_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_username"
            android:layout_toRightOf="@+id/friend_img"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="Status"
            android:textColor="#999999"
            android:textSize="14sp" />
        
        <Button
            android:id="@+id/friend_operation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/comment1"
            android:focusable="false" />
    </RelativeLayout>

</RelativeLayout>