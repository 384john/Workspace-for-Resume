<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <RelativeLayout
            android:id="@+id/layout_login_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#57068c"
            android:layout_marginBottom="40dp" >
            
            <TextView
                android:id="@+id/text_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="NYU LINK"
                android:textColor="#fff"
                android:textSize="22sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_login_username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/layout_login_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="@drawable/input_box_grey_border"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/icon_username"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_username" />

            <EditText
                android:id="@+id/Ledit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:hint="Username" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_login_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/layout_login_username"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/input_box_grey_border"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_password" />
            
            <EditText
                android:id="@+id/Ledit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_password"
                android:background="#fff"
                android:hint="Password"
                android:inputType="textPassword" />
        </RelativeLayout>
	
	<RelativeLayout
            android:id="@+id/repeatsendemail"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@id/layout_login_password"
	    android:visibility="gone"
            android:background="@drawable/button_green" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Repeat Send Email"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@id/repeatsendemail"
            android:background="@drawable/button_green" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="SIGN IN"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/layout_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp" >
        
	        <TextView
	            android:id="@+id/text_forgot_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Forgot Password?"
	            android:textSize="14sp"
	            android:textColor="#ccc" />
	        
	        <TextView
	            android:id="@+id/text_divider"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/text_forgot_password"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:text="|"
	            android:textSize="14sp"
	            android:textColor="#ccc" />
	        
	        <TextView
	            android:id="@+id/register"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/text_divider"
	            android:text="Sign Up"
	            android:textSize="14sp"
	            android:textColor="#818790" />
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>