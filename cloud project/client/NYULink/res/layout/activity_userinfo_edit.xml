<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEC"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_back1" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/submit3" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/UserCamera"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/my_photo_for_drawer" />

            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/UserCamera"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/UserCamera"
                android:text="Male"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/email_Edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_text"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/UserCamera"
                android:singleLine="true"
                android:textColor="#d11255"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/age_Edittext"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_below="@id/UserCamera"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_box_grey_border"
                android:gravity="start"
                android:hint="Your age"
                android:inputType="textPassword|number"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/address_Edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/age_Edittext"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_box_grey_border"
                android:gravity="start"
                android:hint="Your address"
                android:padding="10dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/status_Edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/address_Edittext"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_box_grey_border"
                android:gravity="start"
                android:hint="Say something about yourself"
                android:padding="10dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>